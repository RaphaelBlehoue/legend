{% endblock %}
{% block body %}
    <h1 class="bg-white content-heading border-bottom">Dashboard</h1>
    <div class="bg-white innerAll border-bottom">
        <ul class="menubar">
            <li class="active"><a href="">Dashboard</a></li>
            <li><a href="{{ path('dossier_index') }}">{{ 'Dossier Weddings' }}</a></li>
            <li><a href="#">{{ 'Creation' }}</a></li>
        </ul>
    </div>
    <div class="innerAll spacing-x2">
        {{ form_start(form) }}
            <!-- Row -->
            <div class="row">
                <!-- Column -->
                <div class="col-md-10 col-md-offset-1">
                    <!-- Widget -->
                    <div class="widget widget-inverse" >
                        <!-- Widget heading -->
                        <div class="widget-head">
                            <a href="{{ path('dossier_index') }}" class="btn btn-xs btn-info pull-right">
                                <i class="fa fa-plus fa-fw"></i> {{ 'Liste des dossier mariages'|upper }}
                            </a>
                            <h4 class="heading">{{ 'Créer un dossier de mariage'|upper }}</h4>
                        </div>
                        <!-- // Widget heading END -->
                        <div class="widget-body">
                            <div class="innerB">
                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="name">{{ 'Pack du dossier de mariage' }}</label>
                                        {{ form_row(form.package) }}
                                        {{ form_errors(form.package) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="name">{{ 'Nom du dossier' }}</label>
                                        {{ form_row(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="weddingMen">{{ 'Nom du marié' }}</label>
                                        {{ form_row(form.weddingMen) }}
                                        {{ form_errors(form.weddingMen) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="weddingMen">{{ 'photo de profile du marié' }}</label>
                                        {{ form_row(form.profileMenFile) }}
                                        {{ form_errors(form.profileMenFile) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="weddingMen">{{ 'description du marié' }}</label>
                                        {{ form_row(form.content_wedding_men) }}
                                        {{ form_errors(form.content_wedding_men) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="weddingWomen">{{ 'Nom de la mariée' }}</label>
                                        {{ form_row(form.weddingWomen) }}
                                        {{ form_errors(form.weddingWomen) }}
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="weddingMen">{{ 'photo de profile de la mariée' }}</label>
                                        {{ form_row(form.profileWomenFile) }}
                                        {{ form_errors(form.profileWomenFile) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="weddingMen">{{ 'description de la marié' }}</label>
                                        {{ form_row(form.content_wedding_women) }}
                                        {{ form_errors(form.content_wedding_women) }}
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="name">{{ 'date de ceremonie' }}</label>
                                        {{ form_row(form.ceremonyDate) }}
                                        {{ form_errors(form.ceremonyDate) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="name">{{ 'couleur de la cérémonie' }}</label>
                                        <input type="text" id="colorpickerColor" class="form-control" value="#5a6a87" name="_color"/>
                                        <div class="separator bottom"></div>
                                        <div id="colorpicker"></div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="name">{{ 'video wedding' }}</label>
                                        {{ form_row(form.video) }}
                                        {{ form_errors(form.video) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 form-group">
                                        <label class="control-label" for="name">{{ 'Description du couple' }}</label>
                                        {{ form_row(form.content) }}
                                        {{ form_errors(form.content) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <button type="submit" class="btn btn-success" formnovalidate>{{ 'Créer le dossier & Continer '|upper }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- // Widget END -->
                </div>
                <!-- // Column END -->
            </div>
            <!-- // Row END -->
        {{ form_end(form) }}
    </div>
{% endblock %}

