{% extends 'LabsTemplateBundle::layout.html.twig' %}
{% block Title %}{{ 'Evenements - catégories | Legend Photography' }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/labstemplate/assets/css/admin/module.admin.page.profile_resume.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/labstemplate/assets/css/admin/module.admin.page.contacts.min.css') }}"/>

{% endblock %}
{% block body %}

    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success" role="alert">
            {% for msg in app.session.flashBag.get('success') %}
                <strong> Succès </strong>{{ msg }}.
            {% endfor %}
        </div>
    {% endif %}

    <h1 class="bg-white content-heading border-bottom">Dashboard</h1>
    <div class="bg-white innerAll border-bottom">
        <ul class="menubar">
            <li class="active"><a href="">Dashboard</a></li>
            <li><a href="#">{{ 'Categories' }}</a></li>
            <li><a href="#">{{ 'Evenements' }}</a></li>
        </ul>
    </div>
    <div class="innerAll spacing-x2">
        <!-- Widget -->
        <div class="widget finances_summary widget-inverse">

            <div class="row row-merge">
                <!-- col -->
                <div class="col-lg-12 col-md-12 col-sm-12">

                    <div class="innerAll half border-bottom">
                        <h4 class="pull-left innerT half margin-none">Dossier : {{ dossier.name }}</h4>
                        <div class="clearfix"></div>

                    </div>
                    <div class="innerAll ">
                        <p>{{ dossier.content|raw }}</p>
                        <a href="{{ path('dossier_edit', { 'id': dossier.id })  }}" class="btn btn-info btn-sm"><i class="fa fa-edit fa-fw"></i> Modifier</a>
                    </div>



                    <div class="innerAll half heading-buttons border-bottom">
                        <h4 class="margin-none pull-left"></h4>

                        <button class="btn btn-default btn-xs  pull-right"><i class="fa fa-cog "></i></button>

                        <div class="clearfix"></div>

                    </div>

                    <div class="innerAll">
                        <div class="widget widget-inverse widget-gallery" data-toggle="collapse-widget">
                            <div class="widget-head"><h4 class="heading">Photo Pre-wedding</h4></div>
                            <div class="widget-body">
                                <!-- Gallery Layout -->
                                <div class="gallery gallery-2">
                                    <ul class="row list-unstyled" data-toggle="modal-gallery" data-target="#modal-gallery" id="gallery-4" data-delegate="#gallery-4">
                                        {% for mediaprewedding in prewedding %}
                                            <li class="col-md-3"><a class="thumb" href="{{ mediaprewedding.assertPath|imagine_filter('my_thumb_admin_gallery') }}" data-gallery="gallery"><img src="{{ mediaprewedding.assertPath|imagine_filter('my_thumb_admin_gallery') }}" alt="photo" data-toggle="prettyPhoto" class="img-responsive"/></a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                <!-- // Gallery Layout END -->
                            </div>
                        </div>
                    </div>


                    <div class="innerAll">
                        <div class="widget widget-inverse widget-gallery" data-toggle="collapse-widget">
                            <div class="widget-head"><h4 class="heading">Photo wedding</h4></div>
                            <div class="widget-body">
                                <!-- Gallery Layout -->
                                <div class="gallery gallery-2">
                                    <ul class="row list-unstyled" data-toggle="modal-gallery" data-target="#modal-gallery" id="gallery-4" data-delegate="#gallery-4">
                                        {% for mediawedding in wedding %}
                                            <li class="col-md-3"><a class="thumb" href="{{ mediawedding.assertPath|imagine_filter('my_thumb_admin_gallery') }}" data-gallery="gallery"><img src="{{ mediawedding.assertPath|imagine_filter('my_thumb_admin_gallery') }}" alt="photo" data-toggle="prettyPhoto" class="img-responsive"/></a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                                <!-- // Gallery Layout END -->
                            </div>
                        </div>
                    </div>


                    <div class="innerAll half heading-buttons border-bottom">
                        <h4 class="margin-none pull-left"> Best Man et Best Women </h4>
                        <div class="clearfix"></div>
                    </div>

                    {% for man in bestMan %}
                        <div class="col-md-6 bg-white border-bottom ">

                            <div class="row">
                                <div class="col-sm-9">
                                    <div class="media">
                                        <a class="pull-left" href="#">
                                            <img class="media-object" src="{{ man.assertPath|imagine_filter('my_thumb_best') }}" alt="...">
                                        </a>
                                        <div class="media-body innerAll half">
                                            <h4 class="media-heading padding-none"><a href="">{{ man.name }}</a> </h4>
                                            <small class="text-success"><i class="fa fa-check"></i> {{ (man.top == 1) ? 'Best Man en chef' : 'Best Man' }}</small>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                    {% for women in bestwomen %}
                        <div class="col-md-6 bg-white border-bottom ">

                            <div class="row">
                                <div class="col-sm-9">
                                    <div class="media">
                                        <a class="pull-left" href="#">
                                            <img class="media-object" src="{{ women.assertPath|imagine_filter('my_thumb_best') }}" alt="...">
                                        </a>
                                        <div class="media-body innerAll half">
                                            <h4 class="media-heading padding-none"><a href="">{{ women.name }}</a> </h4>
                                            <small class="text-success"><i class="fa fa-check"></i> {{ (women.top == 1) ? 'Best Women en chef' : 'Best Women' }}</small>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- // END col -->

            </div>

        </div>
        <!-- // END row -->
    </div>
{% endblock %}

