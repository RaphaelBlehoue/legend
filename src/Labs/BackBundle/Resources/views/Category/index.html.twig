{% extends 'LabsTemplateBundle::layout.html.twig' %}
{% block Title %}{{ 'Evenements - catégories | Legend Photography' }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/labstemplate/assets/css/admin/module.admin.page.tables.min.css') }}" />
{% endblock %}
{% block body %}

    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success" role="alert">
            {% for msg in app.session.flashBag.get('success') %}
                <strong> Succès </strong>{{ msg }}.
            {% endfor %}
        </div>
    {% endif %}

    <h1 class="bg-white content-heading border-bottom">Dashboard</h1>
    <div class="bg-white innerAll border-bottom">
        <ul class="menubar">
            <li class="active"><a href="index.html?lang=en">Dashboard</a></li>
            <li><a href="#">{{ 'Categories' }}</a></li>
            <li><a href="#">{{ 'Evenements' }}</a></li>
        </ul>
    </div>
    <div class="innerAll spacing-x2">
        <!-- Widget -->
        <div class="widget widget-inverse">
            <div class="widget-head">
                <a href="{{ path('category_create') }}" class="btn btn-xs btn-success pull-right">
                    <i class="fa fa-plus fa-fw"></i> {{ 'Créer une nouvelle catégorie' }}
                </a>
                <h4 class="heading">{{ 'Liste des catégories d\'evenements' }}</h4>
            </div>
            <div class="widget-body padding-bottom-none">
                <!-- Table -->
                <table class="dynamicTable tableTools table table-striped checkboxs">

                    <!-- Table heading -->
                    <thead>
                        <tr>
                            <th>{{ 'ID' }}</th>
                            <th>{{ 'Nom' }}</th>
                            <th>{{ 'Niveau' }}</th>
                            <th>{{ 'Edit' }}</th>
                            <th>{{ 'Delete' }}</th>
                        </tr>
                    </thead>
                    <!-- // Table heading END -->

                    <!-- Table body -->
                    <tbody>
                        <!-- Table row -->
                        {% for category in categories %}
                            <tr class="gradeX">
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td><span class="label label-{{ (category.top == 1) ? 'success' : 'primary' }}">{{ (category.top == 1) ? 'Top' : 'normal' }}</span></td>
                                <td><a href="{{ path('category_edit', {'id' : category.id}) }}"><i class="fa fa-pencil-square-o"></i></a></td>
                                <td><a href="{{ path('category_delete', {'id' : category.id}) }}"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                        {% endfor %}
                        <!-- // Table row END -->
                    </tbody>
                    <!-- // Table body END -->

                </table>
                <!-- // Table END -->
            </div>
        </div>
        <!-- // Widget END -->
    </div>
{% endblock %}

