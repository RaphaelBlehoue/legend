{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.1/css/bootstrap-datepicker.css"></script>
{% endblock %}
{% block menu %}
    {{ render(controller('LabsFrontBundle:Default:getMenuGlobal')) }}
{% endblock %}

{% block body %}
    <section id="page-title">

        <div class="container clearfix">
            <h1>Contact</h1>
            <span>{{ 'Prenez Contact avec nous' }}</span>
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}">{{ 'Accueil' }}</a></li>
                <li class="active">Contact</li>
            </ol>
        </div>
    </section><!-- #page-title end -->
    <section id="google-map" class="gmap slider-parallax"></section>

    <section id="content">

        <div class="content-wrap">

            <div class="container clearfix">

                <!-- Postcontent
                ============================================= -->
                <div class="postcontent nobottommargin">

                    <h3>Contactez-nous | Reservez une date</h3>

                    {% if app.session.flashBag.has('success') %}
                        <div class="alert alert-success" role="alert">
                            {% for msg in app.session.flashBag.get('success') %}
                                <strong> Succès </strong>{{ msg }}.
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% if app.session.flashBag.has('error') %}
                        <div class="alert alert-danger" role="alert">
                            {% for msg in app.session.flashBag.get('error') %}
                                <strong> Succès </strong>{{ msg }}.
                            {% endfor %}
                        </div>
                    {% endif %}


                        {{ form_start(form, { 'attr' : { 'class' : 'nobottommargin'} }) }}

                        <div class="form-process"></div>

                        <div class="col_one_third">
                            <label for="template-contactform-name">{{ 'Votre nom' }} <small>*</small></label>
                            {{ form_row(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="col_one_third">
                            <label for="template-contactform-email">{{ 'Votre adresse email' }}</label>
                            {{ form_row(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="col_one_third col_last">
                            <label for="template-contactform-phone">{{ 'Date de reservation' }}</label>
                            {{ form_row(form.date_res) }}
                            {{ form_errors(form.date_res) }}
                        </div>

                        <div class="clear"></div>

                        <div class="col_one_third">
                            <label for="template-contactform-phone">{{ 'Numero fixe' }} <small>{{ 'Si vous en avez!' }}</small></label>
                            {{ form_row(form.phone) }}
                            {{ form_errors(form.phone) }}
                        </div>

                        <div class="col_one_third">
                            <label for="template-contactform-phone">{{ 'Portable' }}</label>
                            {{ form_row(form.mobile) }}
                            {{ form_errors(form.mobile) }}
                        </div>

                        <div class="col_one_third col_last">
                            <label for="template-contactform-service">{{ 'Choix du service demandé' }}</label>
                            {{ form_row(form.packages) }}
                            {{ form_errors(form.packages) }}
                        </div>

                        <div class="clear"></div>

                        <div class="col_one_third col_last">
                            <label for="template-contactform-service">{{ 'Renseignez le lieu de l\'evenement' }}</label>
                            {{ form_row(form.lieu) }}
                            {{ form_errors(form.lieu) }}
                        </div>

                        <div class="clear"></div>

                        <div class="col_full">
                            <label for="template-contactform-message">{{ 'Decrivez votre demande' }} <small>*</small></label>
                            {{ form_row(form.content) }}
                            {{ form_errors(form.content) }}
                        </div>

                        <div class="col_full">
                            <button class="button button-3d nomargin" type="submit" formnovalidate>{{ 'Valider la reservation' }}</button>
                        </div>

                    {{ form_end(form) }}
                </div><!-- .postcontent end -->

                <!-- Sidebar
                ============================================= -->
                <div class="sidebar col_last nobottommargin">

                    <address>
                        <strong>{{ 'Adresse' }}</strong><br>
                        {{ contact.adresse|raw }}
                    </address>
                    <abbr title="Phone Number"><strong>Phone:</strong></abbr> {{ contact.phone }}<br>
                    <abbr title="Fax"><strong>Fax:</strong></abbr> {% if contact.faxe|length > 0 %} {{ contact.faxe }} {% endif %}<br>
                    <abbr title="Email Address"><strong>Email:</strong></abbr> {{ contact.email }}

                    <div class="widget noborder notoppadding">

                        <a href="{{ contact.facebook }}" target="_blank" class="social-icon si-small si-dark si-facebook">
                            <i class="icon-facebook"></i>
                            <i class="icon-facebook"></i>
                        </a>

                        <a href="{{ contact.twitter }}" target="_blank" class="social-icon si-small si-dark si-twitter">
                            <i class="icon-twitter"></i>
                            <i class="icon-twitter"></i>
                        </a>

                        <a href="{{ contact.youtube }}" target="_blank" class="social-icon si-small si-dark si-youtube">
                            <i class="icon-youtube"></i>
                            <i class="icon-youtube"></i>
                        </a>

                        <a href="{{ contact.vimeo }}" target="_blank" class="social-icon si-small si-dark si-vimeo">
                            <i class="icon-vimeo"></i>
                            <i class="icon-vimeo"></i>
                        </a>

                        <a href="{{ contact.pinterest }}" target="_blank" class="social-icon si-small si-dark si-pinterest">
                            <i class="icon-pinterest"></i>
                            <i class="icon-pinterest"></i>
                        </a>

                        <a href="{{ contact.google }}" target="_blank" class="social-icon si-small si-dark si-gplus">
                            <i class="icon-gplus"></i>
                            <i class="icon-gplus"></i>
                        </a>

                    </div>

                </div><!-- .sidebar end -->

            </div>

        </div>

    </section><!-- #content end -->


    <div id="gotoTop" class="icon-angle-up"></div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.gmap.js') }}"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.1/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.1/locales/bootstrap-datepicker.fr.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd',
                language : 'fr',
                orientation : "bottom",
                showOnFocus : true,
                todayHighlight : true
            });
        });
    </script>
    <script type="text/javascript">

        $(document).ready(function($) {
            "use strict";

            /* ---------------------------------------------------------------------- */
            /*	Contact Map 2
             /* ---------------------------------------------------------------------- */
            var contact = {"lat":"5.387489", "lon":"-4.000118"}; //Change a map coordinate here!

            try {
                var mapContainer = $('#google-map');
                mapContainer.gmap3({
                            action: 'addMarker',
                            marker:{
                                options:{
                                    icon : new google.maps.MarkerImage('images/marker.png')
                                }
                            },
                            latLng: [contact.lat, contact.lon],
                            map:{
                                center: [contact.lat, contact.lon],
                                zoom: 16
                            },
                        },
                        {action: 'setOptions', args:[{scrollwheel:false}]}
                );
            } catch(err) {

            }

        });

    </script><!-- Google Map End -->
{% endblock %}