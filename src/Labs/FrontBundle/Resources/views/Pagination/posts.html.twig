{% if pageCount > 1 %}
<ul class="pagination">
    {% if previous is defined %}
        <li><a href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><i class="fa fa-chevron-left"></i></a></li>
    {% endif %}
    {% for page in pagesInRange %}
        {% if page != current %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="active">
                <a href="#">{{ page }}</a>
            </li>
        {% endif %}
    {% endfor %}
    {% if next is defined %}
        <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
    {% endif %}
</ul>
{% endif %}
