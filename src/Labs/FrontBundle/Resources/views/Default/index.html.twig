{% extends '::base.html.twig' %}
{% block title %} {{ 'Legend Photograhy | Accueil' }} {% endblock %}
{% block menu %}
 {{ render(controller('LabsFrontBundle:Default:getMenu')) }}
{% endblock %}

{% block slide  %}
  {{ render(controller('LabsFrontBundle:Default:getSlide')) }}
{% endblock  %}

{% block body %}
 <section id="content">

  <div class="content-wrap">
   <!--  bloc About -->
    <div class="container clearfix">

     <div class="heading-block center nobottomborder bottommargin-lg">
      <h1>{{ about.title }}</h1>
      <span>{{ about.subtitle }}</span>
     </div>

     <div class="col_one_third nobottommargin">

      <div class="heading-block fancy-title nobottomborder title-bottom-border">
       <h4> {{ about.titleWhy }}.</h4>
      </div>

     <p>{{ about.contentWhy|raw }}</p>

     </div>

     <div class="col_one_third nobottommargin">

      <div class="heading-block fancy-title nobottomborder title-bottom-border">
       <h4> {{ about.titleMission }}</h4>
      </div>

     <p>{{ about.contentMission|raw }}</p>
     </div>

     <div class="col_one_third nobottommargin col_last">

      <div class="heading-block fancy-title nobottomborder title-bottom-border">
       <h4> {{ about.titleDo }}</h4>
      </div>

      <p>{{ about.contentDo|raw }}</p>

     </div>

    <div class="clear"></div>

   </div>
   <!-- End bloc About -->

   <!--  bloc video DG -->
   <div class="container clearfix">

    <div class="clear"></div><div class="line bottommargin-lg"></div>

    <div class="col_two_fifth nobottommargin">
      {{ about.video|raw }}
    </div>

    <div class="col_three_fifth nobottommargin col_last">

     <div class="heading-block">
      <h2>{{ about.titleVideo }}</h2>
     </div>

     <p>{{ about.contentVideo|raw }}</p>

    </div>

    <div class="clear"></div>

   </div>
   <!--  end bloc video DG -->

   <!--  bloc package -->
    <div class="section topmargin-lg">
    <div class="container clearfix">

     <div class="col_full bottommargin-lg common-height">

      <div class="heading-block center">
        <h3><span>{{ page.allpackTitle }}</span> </h3>
        <span>{{ page.allpackSubtitle }}</span>
      </div>

      {%  for pack in packs %}
         <div class="col-md-4 dark col-padding ohidden" style="background-color: {{ pack.color }} ; margin-bottom: 5px;">
          <div>
           <h3 class="uppercase" style="font-weight: 600;">{{ pack.name }}</h3>
           <p style="line-height: 1.8;">{{ pack.content|raw }}</p>
           <a href="{{ path('pack_view_list', { 'id': pack.id, 'slug' : pack.slug }) }}" class="button button-border button-light button-rounded uppercase nomargin">{{ 'afficher tout' }}</a>
           <i class="icon-bulb bgicon"></i>
          </div>
         </div>
      {% endfor %}
      <div class="clear"></div>

     </div>

    </div>

   </div>
   <!-- end  bloc package -->

   <!--  bloc mariage -->
    <div class="container clearfix">

    <div class="heading-block center">
     <h3>Some of our <span>Featured</span> Works</h3>
     <span>We have worked on some Awesome Projects that are worth boasting of.</span>
    </div>


     <div id="oc-portfolio" class="owl-carousel portfolio-carousel portfolio-nomargin oc-portfolio">
     {% for  media in dossiers %}
      <div class="oc-item">
       <div class="iportfolio">
        <div class="portfolio-image">
         <a href="#">
          <img src="{{ media.assertPath|imagine_filter('image_profolio') }}" alt="{{ media.dossier.weddingMen }} & {{ media.dossier.weddingWomen }}">
         </a>
         <div class="portfolio-overlay">
          <a href="{{ media.assertPath|imagine_filter('image_profolio_full') }}" class="left-icon" data-lightbox="image"><i class="icon-line-plus"></i></a>
          <a href="#" class="right-icon"><i class="icon-line-ellipsis"></i></a>
         </div>
        </div>
        <div class="portfolio-desc">
         <h3><a href="#">{{ media.dossier.weddingMen }} & {{ media.dossier.weddingWomen }}</a></h3>
         <span> <strong>Evenement - </strong> <a href="#">{{ media.type.name }}</a></span>
        </div>
       </div>
      </div>
    {% endfor %}

    </div>

   </div>
   <!--  end bloc mariage -->

   <!--  bloc event -->
    <div class="section topmargin-lg">
    <div class="container clearfix">

     <div class="heading-block center">
      <h3>Some of our <span>Featured</span> Works</h3>
      <span>We have worked on some Awesome Projects that are worth boasting of.</span>
     </div>

     <div id="oc-portfolio" class="owl-carousel portfolio-carousel portfolio-nomargin oc-portfolio">

      {% for event in events %}
        <div class="oc-item">
       <div class="iportfolio">
        {% for media in event.medias %}
        <div class="portfolio-image">
         <a href="#">
          <img src="{{ media.assertPath|imagine_filter('image_profolio') }}" alt="{{ event.name }}">
         </a>
         <div class="portfolio-overlay">
          <a href="{{ media.assertPath|imagine_filter('image_profolio_full') }}" class="left-icon" data-lightbox="image"><i class="icon-line-plus"></i></a>
          <a href="#" class="right-icon"><i class="icon-line-ellipsis"></i></a>
         </div>
        </div>
        {% endfor %}
        <div class="portfolio-desc">
         <h3><a href="#">{{ event.name }}</a></h3>
         <span> <strong>Evenement - </strong> <a href="#">{{ event.category.name }}</a></span>
        </div>
       </div>
      </div>
      {% endfor %}
     </div>
    </div>

   </div>
   <!--  end bloc event -->

   <!--  bloc partenaire -->
    <div class="container clearfix">

    <div class="clear"></div><div class="line"></div>

    <h4 class="center">{{ 'Nos partenaires' }}</h4>

    <ul class="clients-grid grid-6 bottommargin clearfix">
     {% for partner in partners %}
      <li><a href="{% if partner.website|length > 0 %}   {{ partner.website }} {% endif %}"><img src="{{ partner.assertPath|imagine_filter('logo_partenaire') }}" alt="Clients"></a></li>
     {% endfor %}
    </ul>

   </div>
   <!--  end bloc partenaire -->

   <!--  bloc temoignage -->
    <div class="section topmargin-sm footer-stick">

    <h4 class="uppercase center">Que  Disent nos <span>Clients</span> et nous ?</h4>

    <div class="fslider testimonial testimonial-full" data-animation="fade" data-arrows="false">
     <div class="flexslider">
      <div class="slider-wrap">
       {% for citation in citations %}
        <div class="slide">
        <div class="testi-image">
         <a href="#"><img src="{{ citation.assertPath|imagine_filter('citation_thumb') }}" alt="{{ citation.author|capitalize }}"></a>
        </div>
        <div class="testi-content">
         <p>{{ citation.content }}</p>
         <div class="testi-meta">
          {{ citation.author|capitalize }}
          <span>{{ citation.entreprise|capitalize }}</span>
         </div>
        </div>
       </div>
       {% endfor %}
      </div>
     </div>
    </div>

   </div>
   <!--  end bloc temoignage -->

   <div class="clear"></div>

  </div>

 </section>
 <!-- #content end -->

{% endblock %}

{% block javascripts %}
 <script type="text/javascript" src="{{ asset('js/jquery.Swiper_custom.js') }}"></script>
 <script type="text/javascript" src="{{ asset('js/Portfolio.js') }}"></script>
{% endblock %}
